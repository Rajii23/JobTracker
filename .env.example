# Environment Variables Template
# Copy this to .env and fill in your actual values

# Backend
PORT=5000
MONGODB_URI=mongodb://localhost:27017/jobtracker
JWT_SECRET=your_jwt_secret_key_here
OPENAI_API_KEY=your_openai_api_key_here
NODE_ENV=development

# Google OAuth - Web Application
GOOGLE_CLIENT_ID_WEB=your_web_client_id_here
GOOGLE_CLIENT_SECRET_WEB=your_web_client_secret_here
GOOGLE_REDIRECT_URI_WEB=http://localhost:5173/auth/callback

# Google OAuth - Chrome Extension
GOOGLE_CLIENT_ID_EXTENSION=your_extension_client_id_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Chrome Extension ID (for CORS)
EXTENSION_ID=your_extension_id_here

# Frontend (Vite)
VITE_API_URL=http://localhost:5000/api
VITE_GOOGLE_CLIENT_ID=your_web_client_id_here

# Production URLs (for reference)
# FRONTEND_URL=https://job-tracker-frontend-topaz.vercel.app
# VITE_API_URL=https://job-tracker-backend-psi.vercel.app/api
